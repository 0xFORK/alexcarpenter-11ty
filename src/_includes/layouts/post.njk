{% extends 'layouts/default.njk' %}

{% block main %}
  <article>
    <header class="c-page-header">
      <time>{{ date | date_formatted }}</time>
      <h1 class="c-page-header__heading">
        {% if link -%}
          <a rel="external" href="{{ link | safe }}">{{ title }}</a>
        {%- else -%}
          {{ title }}
        {%- endif %}
      </h1>
    </header>
    <div class="c-prose">
      {{ content | safe }}
      {% if link -%}
        <hr>
        <a rel="external" href="{{ link | safe }}">View Link</a>
      {%- endif %}
    </div>
  </article>
{% endblock %}
