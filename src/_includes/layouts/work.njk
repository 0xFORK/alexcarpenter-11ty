{% extends 'layouts/default.njk' %}

{% block content %}
  <article>
    <header class="o-content u-text-center">
      <span class="u-eyebrow">Case Study</span>
      <h1>{{ title }}</h1>
      <p class="u-lead">{{ summary }}</p>
      {% if banner %}
        {% Figure {
          fullWidth: true,
          src: '/assets/images/' + banner,
          alt: title + ' graphics',
          border: true
        } %}
      {% endif %}
    </header>
    <div class="o-content">
      {{ content | safe }}
    </div>
  </article>
{% endblock %}
