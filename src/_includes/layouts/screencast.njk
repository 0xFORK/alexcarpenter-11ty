{% extends 'layouts/default.njk' %}
{% import "components/macros.njk" as components %}

{% block main %}
  <div class="o-grid o-grid--justify-end">
    <header class="o-grid__col u-width-8of12@md">
      <time class="u-color-gray u-text-uppercase">{{ page.date | date_formatted }}</time>
      <h1 class="u-font-size-2xl">{{ title }}</h1>
      {{ components.link({
        url: site.social[0].subscribe,
        text: "Subscribe on Youtube",
        external: true
      }) }}
    </header>
  </div>
  <div class="o-grid">
    <div class="o-grid__col">
      {{ components.youtube({
        id: youtubeId,
        title: title
      }) }}
    </div>
  </div>
  <div class="o-grid o-grid--justify-end">
    {% if content %}
    <div class="o-grid__col u-width-8of12@md">
      <div class="o-stack o-stack--prose">
        {{ content | safe }}
      </div>
    </div>
    {% endif %}
    <div class="o-grid__col u-width-8of12@md">
      {% include "components/share.njk" %}
      {% include "components/tags.njk" %}
    </div>
  </div>
{% endblock %}
