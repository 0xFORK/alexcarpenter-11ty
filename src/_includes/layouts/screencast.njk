{% extends 'layouts/default.njk' %}

{% block content %}
  <article>
    <header class="o-content">
      <time class="u-eyebrow">{{ date | date_formatted }}</time>
      <h1>{{ title }}</h1>
    </header>
    <div class="o-content">
      {% Youtube youtubeId %}
      <hr>
      {% Note {
        type: "highlight",
        text: "Did you find this screencast helpful? Be sure to subscribe on [YouTube](https://www.youtube.com/channel/UC2jJoQlzvLPvnYfowAEVaOg?sub_confirmation=1).",
        labelHidden: true
      } %}
      {{ content | safe }}
    </div>
  </article>
{% endblock %}
