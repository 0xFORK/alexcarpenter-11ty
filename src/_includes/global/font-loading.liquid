<style>
  @font-face {
    font-family: 'Lunch';
    src: url('/assets/fonts/lunchtype24-medium-expanded-webfont.woff2') format('woff2'),
         url('/assets/fonts/lunchtype24-medium-expanded-webfont.woff') format('woff');
    font-weight: 500;
    font-style: normal;
  }
</style>

<script>
  (function() {
    if( sessionStorage.foutFontsLoaded ) {
      document.documentElement.className += " fonts-loaded";
      return;
    }
    {{ source('_assets/js/fontfaceobserver.js') }}
    var LunchMediumExpanded = new FontFaceObserver('Lunch', {
      weight: 500,
      style: 'normal'
    });
    Promise.all([
      LunchMediumExpanded.load()
    ]).then(function () {
      document.documentElement.className += ' fonts-loaded';
      sessionStorage.foutFontsLoaded = true;
    });
  })();
</script>
