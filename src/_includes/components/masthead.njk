{% macro masthead(params) %}
<header class="c-masthead">
  <h1 class="c-masthead__title">{{ params.title }}</h1>
  {% if params.summary %}
  <div class="c-masthead__summary">{{ params.summary | markdownify | safe }}</div>
  {% endif %}
  {% if params.button %}
    <div class="c-masthead__cta">
      <a href="" class="c-button">{{ params.button.text }}{% if params.button.icon %} <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0V0z"/><path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8-8-8z"/></svg>{% endif %}</a>
    </div>
  {% endif %}
</header>
{% endmacro %}