<nav class="c-pagination">
  {% if pagination.nextPageLink -%}
    {% set nextPageNumber = pagination.pageNumber + 1 %}
    {% set nextPageLink = 'page/' ~ nextPageNumber %}
    <a class="c-pagination__item" href="/{{ page.fileSlug }}/{{ nextPageLink }}" rel="prev">{% include "components/arrow-left.njk" %} Older</a>
  {%- endif %}

  {% if pagination.previousPageLink -%}
    {% set previousPageNumber = pagination.pageNumber - 1 %}
  {%- if pagination.pageNumber == 1 -%}
    {% set previousPageLink = '' %}
  {%- else -%}
    {% set previousPageLink = 'page/' ~ previousPageNumber %}
  {%- endif -%}
    <a class="c-pagination__item" href="/{{ page.fileSlug }}/{{ previousPageLink }}" rel="next">Newer {% include "components/arrow-right.njk" %}</a>
  {%- endif %}
</nav>

