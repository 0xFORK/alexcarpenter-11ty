<div class="c-actions">
  <div class="c-actions__group">
    <p class="c-actions__heading">Share on</p>
    <ul class="c-actions__list">
      <li class="c-actions__list-item">
        <a href="https://twitter.com/home?status={{title|urlencode}}%20-%20{{site.url}}{{page.url|urlencode}}" class="c-actions__list-anchor">Twitter</a>
      </li>

      <li class="c-actions__list-item">
        <a href="https://www.facebook.com/sharer/sharer.php?u={{site.url}}{{page.url|urlencode}}" class="c-actions__list-anchor">Facebook</a>
      </li>

      <li class="c-actions__list-item">
        <a href="mailto:?&subject={{title|urlencode}}&body={{site.url}}{{page.url|urlencode}}" class="c-actions__list-anchor">Email</a>
      </li>
    </ul>
  </div>

  <div class="c-actions__group">
    <p class="c-actions__heading">Subscribe via</p>
    <ul class="c-actions__list">
      {% if type == 'screencasts' %}
      <li class="c-actions__list-item">
        <a href="https://www.youtube.com/channel/UC2jJoQlzvLPvnYfowAEVaOg?sub_confirmation=1" class="c-actions__list-anchor">YouTube</a>
      </li>
      {% endif %}

      <li class="c-actions__list-item">
        <a href="/screencasts/feed.xml" class="c-actions__list-anchor">RSS</a>
      </li>
    </ul>
  </div>
</div>