{% macro screencast(params) %}
  <div class="c-screencast">
    {% Youtube "sZJrcOfBaNY" %}
    <div class="c-screencast__info">
      {% switch tag %}
        {% case 'html' %}
          <img class="c-screencast__type" src="/assets/images/icon-html.png" alt="HMTL">
        {% case 'css' %}
          <img class="c-screencast__type" src="/assets/images/icon-css.png" alt="CSS">
        {% case 'javascript' %}
          <img class="c-screencast__type" src="/assets/images/icon-js.png" alt="JavaScript">
        {% default %}
      {% endswitch %}
      <h2 class="c-screencast__title">{{ params.title }}</h2>
      <p class="c-screencast__summary">{{ params.summary }}</p>
    </div>
    <div class="c-screencast__details">
      <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"><path fill="var(--color-gray)" d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/><path d="M0 0h24v24H0z" fill="none"/><path fill="var(--color-gray)" d="M12.5 7H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg> 3:40</span>
      <a href="{{ params.url }}">Discuss on Twitter</a>
    </div>
  </div>
{% endmacro %}