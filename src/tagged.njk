---
pagination:
  data: collections
  size: 1
  alias: tag
title: Tagged Posts
permalink: /posts/tagged/{{ tag }}/index.html
---
{% extends 'layouts/default.njk' %}

{% block pageTop %}
  <header class="c-page-header">
    <h1 class="c-page-header__title">Posts tagged “{{ tag }}”</h1>
  </header>
{% endblock %}

{% block main %}
  <ul class="c-listing">
    {% set taglist = collections[ tag ] %}
    {% for entry in taglist | reverse %}
    <li>
      {% include "components/entry.njk" %}
    </li>
    {% endfor %}
  </ul>
{% endblock %}
