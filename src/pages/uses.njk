---
title: Uses
summary: The tools I use to get things done.
permalink: /uses/index.html
---
{% extends "layouts/page.njk" %}
{% block main %}
  <div class="u-margin-top-5">
    <div class="o-grid">
      <div class="o-grid__col">
        <div style="--aspect-ratio: 3/2">
            <picture>
              <picture>
                <source srcset="/assets/images/desktop-setup.webp" type="image/webp">
                <source srcset="/assets/images/desktop-setup.jpg" type="image/jpeg">
                <img src="/assets/images/desktop-setup.jpg" alt="Home desktop setup">
              </picture>
            </picture>
          </div>
      </div>
    </div>
    <div class="o-grid">
      <div class="o-grid__col u-width-4of12@md">
        <div class="c-toc">
          <p class="u-color-gray">Table of contents</p>
          <div class="u-margin-top-3">
            <ul class="c-toc__list">
              {% for category, uses in uses | sort(false, true, "category") | groupby("category") %}
              <li class="c-toc__list-item"><a href="#section-{{ category | lower }}">{{ category }}</a></li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
      <div class="o-grid__col u-width-8of12@md u-margin-top-2 u-margin-top-0@md">
        <div class="o-stack o-stack--prose">
          {% for category, uses in uses | sort(false, true, "category") | groupby("category") %}
          <h2 id="section-{{ category | lower }}">{{ category }}</h2>
          <ul class="c-listing">
            {% for item in uses %}
              <li class="c-listing__item">
                <h3 class="u-font-size-base">{{ item.title }}</h3>
                {% Link item.url, null, true %}<br>
                {% if item.blurb %}
                  <span class="u-color-gray">{{ item.blurb }}</span>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
