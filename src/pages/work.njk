{% extends "layouts/page.njk" %}
{% import "components/macros.njk" as components %}

{% block content %}
  <section class="u-margin-top-5">
    <h2 class="u-text-uppercase">Case studies</h2>
    <ul class="c-listing c-listing--4 u-margin-top-4">
      {% for entry in collections.work | favorites %}
      <li class="c-listing__item">
        <div class="o-grid o-grid--reversed@md">
          <div class="o-grid__col u-width-6of12@md">
          {% if entry.data.thumbnail_sm %}
            {{ components.figure({
              src: entry.data.thumbnail_sm,
              alt: entry.data.title,
              bordered: true
            }) }}
          {% endif %}
          </div>

          <div class="o-grid__col u-width-6of12@md">
            <h3 class="u-font-size-lg u-font-weight-semi-bold"><a class="u-primary-anchor" href="{{ entry.url }}">{{ entry.data.title }}</a></h3>
            <p class="u-margin-top-2">{{ entry.data.summary | markdownify_inline }}</p>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </section>

