{% macro renderList(items, heading) %}
  {% if heading %}<h2>{{ heading }}</h2>{% endif %}
  <ul>
    {% for item in items %}
    <li>
      <strong>{% Link item.url, item.title %}</strong>{% if item.description %}<br><span>{{ item.description}}</span>{% endif %}
    </li>
    {% endfor %}
  </ul>
{% endmacro %}

