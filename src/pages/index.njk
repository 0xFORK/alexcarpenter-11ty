      <h2 class="u-font-size-base u-font-weight-normal u-color-gray u-text-uppercase">Popular screencasts</h2>
    </div>
    <div class="o-grid__col u-width-8of12@md">
      <ul class="c-listing">
        {% for entry in collections.screencasts | favorites | take(5) %}
        <li class="c-listing__item">
          {{ components.entry({
            entry: entry,
            size: 'md'
          }) }}
        </li>
        {% endfor %}
