---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nationbuilder
    - work
    - posts
    - screencasts
permalink: /tagged/{{ tag }}/index.html
---
{% extends "layouts/default.njk" %}

{% block main %}
  <header>
    <div class="o-grid o-grid--justify-end">
      <div class="o-grid__col u-width-8of12@md">
        <h1 class="u-font-size-2xl">Tagged “{{ tag }}”</h1>
      </div>
    </div>
  </header>
  <div class="u-margin-top-5">
    <div class="o-grid o-grid--justify-end">
      <div class="o-grid__col u-width-8of12@md">
        {% set taglist = collections[tag] %}
        <ul class="c-listing c-listing--4">
        {% for entry in taglist | reverse %}
          <li class="c-listing__item">
            <article>
              <time class="c-eyebrow" datetime="{{ entry.date }}">{{ entry.date | date_formatted }}</time>
              <h2 class="u-font-size-lg u-font-weight-normal">{% if entry.data.favorite %}⭐️ {% endif %}<a class="u-primary-anchor" href="{{ entry.url }}">{{ entry.data.title }}</a></h2>
            </article>
          </li>
        {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}
