---
title: Posts
summary: Subscribe via [RSS](/posts/feed.xml).
pagination:
  data: collections.posts
  size: 10
permalink: /posts/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber }}/{% endif %}index.html
---
{% extends 'layouts/page.njk' %}
{% import "components/macros.njk" as components %}

{% block content %}
  <div class="o-grid o-grid--justify-end">
    <div class="o-grid__col u-width-4of12@md">
      <p class="u-color-gray u-text-uppercase">Topics</p>
      <div class="u-margin-top-3">
        <ul class="o-tags">
          {% set topics = [
            { label: "Accessibility", url: "/tagged/accessibility" },
            { label: "CSS", url: "/tagged/css" },
            { label: "JavaScript", url: "/tagged/javascript" },
            { label: "TIL", url: "/tagged/til" },
            { label: "TypeScript", url: "/tagged/typescript" }
          ] %}
          {% for topic in topics %}
            <li class="o-tags__item">
              {{ components.pill({
                url: topic.url,
                label: topic.label
              }) }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="o-grid__col u-width-8of12@md">
      {% include "components/listing.njk" %}
      <div class="u-margin-top-4">
        {% include "components/pagination.njk" %}
      </div>
    </div>
  </div>
{% endblock %}
